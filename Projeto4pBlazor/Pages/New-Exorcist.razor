@page "/New-Exorcist"
@using Microsoft.AspNetCore.Components
@using System.Net.Http
@using System.Net.Http.Json
@inject HttpClient Http

<PageTitle>New Exorcist</PageTitle>

<div class="grid grid-cols-3 grid-rows-[auto_auto_1fr] gap-2 p-4 text-purple-500 bg-black min-h-screen font-mono">
  <div class="border border-white p-2 space-y-2">
    <h2 class="font-bold text-purple-400">Registered Exorcist</h2>

    <!-- Linha com Name, XID e CAT-->
    <div class="flex gap-4">
      <div class="flex-1">
        <label for="name" class="block text-sm">Name</label>
        <input id="name" type="text" class="w-full bg-black border border-purple-500 text-white p-1 rounded" />
      </div>

      <div class="flex-1">
        <label for="xid" class="block text-sm">XID</label>
        <input id="xid" type="text" maxlength="4" class="w-full bg-black border border-purple-500 text-white p-1 rounded uppercase" />
      </div>

      <div class="flex-1">
        <label for="xid" class="block text-sm">CAT</label>
        <input id="xid" type="number" max="7" min="0" class="w-full bg-black border border-purple-500 text-white p-1 rounded" />
      </div>
    </div>
    
    <!-- Linha com Agenda e Blasphemy -->
    <div class="flex gap-4">
      <div class="flex-1">
        <label for="agenda" class="block text-sm">Agenda</label>
        <input id="agenda" type="text" class="w-full bg-black border border-purple-500 text-white p-1 rounded" />
      </div>
    
    <div class="flex-1">
        <label for="blasphemy" class="block text-sm">Blasphemy</label>
        <input id="blasphemy" type="text" class="w-full bg-black border border-purple-500 text-white p-1 rounded" />
       </div>
    </div>
    
    <!-- Linha com Gender,-- Height e Weight -->
    <div class="flex gap-4">
      <div class="flex-1">
        <label for="gender" class="block text-sm">Gender</label>
        <input id="gender" type="text" class="w-full bg-black border border-purple-500 text-white p-1 rounded" />
      </div>

      <div class="flex-1">
        <label for="height" class="block text-sm">Height</label>
        <input id="height" type="number" maxlength="4" class="w-full bg-black border border-purple-500 text-white p-1 rounded uppercase" />
      </div>

      <div class="flex-1">
        <label for="weight" class="block text-sm">Weight</label>
        <input id="weight" type="number" max="7" min="0" class="w-full bg-black border border-purple-500 text-white p-1 rounded" />
      </div>
    </div>

    <!-- Linha com Eyes e Hair -->
    <div class="flex gap-4">
      <div class="flex-1">
        <label for="eyes" class="block text-sm">Eyes</label>
        <input id="eyes" type="text" class="w-full bg-black border border-purple-500 text-white p-1 rounded" />
      </div>
    
    <div class="flex-1">
        <label for="hair" class="block text-sm">Hair</label>
        <input id="hair" type="text" class="w-full bg-black border border-purple-500 text-white p-1 rounded" />
       </div>
    </div>

  </div>


    <div class="border border-white p-2">Registered Kit</div> <!-- Kit / SC -->
    <div class="border border-white p-2">Agenda</div> <!-- Agenda -->

    <div class="border border-white p-2">Exorcist Status</div> <!-- Stats 1 -->
    <div class="border border-white p-2">Registered Skills</div> <!-- Stats 2 -->
    <div class="border border-white p-2">Blasphemy</div> <!-- Blasphemy -->

    <!-- BOTÃƒO -->
    <div class="col-span-3 justify-end mt-4">
        <button class="bg-purple-500 text-black font-bold px-6 py-2 rounded">REGISTER</button>
    </div>
</div>

